---
const {name, company, descriptions, list, apps} = Astro.props 
const pathIcon = "../../public/icons/skills/"
const extension = ".svg"
---

<div class="mb-28">
    <h4 class="text-white font-light text-lg">{company}</h4>
    <h3 class="text-white font-normal text-2xl mb-3">{name}</h3>
        {
            descriptions.map(description => (
                <p class="text-[#cec1b5] font-light text-base">{description}</p><br/>
            ))
        }
    <ul>
        {
            list.map(lis => (
                <li class="text-[#cec1b5] font-light text-base">Â· {lis}</li>
            ))
        }
    </ul>
    {
        list != "" ? <br/> : ""
    }
    <ul class=" flex gap-2 text-white">
        {
            apps.map(app => (

                <li>
                    <img
                        src={ `${pathIcon}${app}${extension}` }
                        alt={`${app} icon`} 
                        class=" h-6"
                    />                    
                </li>
            ))
        }
    </ul>

</div>