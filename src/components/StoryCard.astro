---
const {company, position, place, tasks} = Astro.props 
const data = Object.values(tasks);
---

<article class="mb-12 bg-stone-800 p-14 rounded-xl">
    <h2 class="text-xl font-normal text-white">{company}</h2>
    <h3 class="text-lg font-normal text-[#cec1b5]">{position}</h3>
    <h4 class="text-[#cec1b5] font-light">{place}</h4>
    <ul class="text-white mt-4">
    {
        data.map(task => (
            <li> | {task}</li>
        ))
    }
    </ul>
</article>